{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES6",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "express"]
    },
    "include": ["src/**/*", "node_modules/@types"],           
    "exclude": ["node_modules", "dist"]  
  }
  